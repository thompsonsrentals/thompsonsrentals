    <a class="close-reveal-modal">&#215;</a>
    <ul class="inline-list left">
        <li><%= link_to "http://www.facebook.com/pages/Thompsons-Rentals/608118035907131" do %><img src="assets/fc-webicon-facebook.png" style="margin-right: 20px;">Follow Us On Facebook<% end %></li>
    </ul>
    </div>
    
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= javascript_include_tag "application" %>
  </body>
</html>